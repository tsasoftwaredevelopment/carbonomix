<GraphItem>
    orientation: "vertical"
    size_hint_y: None
    height: Window.size[1] / 1.5
    TwoLineIconListItem:
        text: str(root.category)
        secondary_text: str(abs(root.increase)) + "% " + ("increase" if root.increase >= 0 else "decrease") + " from last entry."
        IconLeftWidget:
            icon: "arrow-up-bold-circle-outline" if root.increase > 0 else "arrow-down-bold-circle-outline" if root.increase < 0 else "minus-circle-outline"
            theme_text_color: "Custom"
            text_color: (1, 0, 0, 1) if root.increase > 0 else (0, 1, 0, 1) if root.increase < 0 else (0.5, 0.5, 0.5, 1)

                    
<FootprintPopup>
    auto_dismiss: False
    size_hint: 0.9, 0.9
    halign: "center"
    title: "Your Carbon Footprint:"
    title_align: "center"
    title_size: 30
    separator_height: 3
    separator_color: 1, 1, 1, 1
    background_normal: ""
    background_color: 189/255, 1, 206/255, 1
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        MDLabel: 
            text: root.display_footprint() + " lbs CO2 per year."
            font_size: 40
            halign: "center"
            text_color_active: 5, 5, 5, 5
        Button:
            text: "Go to Home Screen"
            font_size: 24
            background_color: 189/255, 1, 206/255, 1
            on_release: 
                app.root.current = "main"
                root.dismiss()

<EditPopup>
    size_hint: 0.75, 0.27
    halign: "center"
    title_align: "center"
    title_size: 20
    title_color: 1, 1, 1, 1
    background_normal: ""
    background_color: 189/255, 1, 206/255, 1

    FloatLayout:
        orientation: "vertical"
        size: root.width, root.height
        MDTextField:
            id: new_value
            color_mode: "custom"
            current_hint_text_color: 1, 1, 1, 1
            multiline: False
            input_filter: 'float'
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            required: True
            line_color_normal: 108/255, 168/255, 124/255, 1
            max_text_length: 10
            hint_text: "$"
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            
        Button:
            text: "Update"
            font_size: 24
            background_normal: ""
            background_color: 113/255, 201/255, 135/255, 1
            on_release:
                root.update_values()
            size_hint: 0.8, 0.02
            pos_hint: {"center_x": 0.5, "center_y": 0.18}

