        opacity: 0


<CustomSnackbar>
    MDIconButton:
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {'center_y': .5}
        icon: root.icon

    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color: 1, 1, 1, 1
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}
