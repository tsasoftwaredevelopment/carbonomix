#:import Window kivy.core.window.Window

<Label>
    color: 0, 0, 0, 1


<StartingScreen>
    canvas:
        Color:
            rgba: 189/255, 1, 206/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: title
        text: "Carbonomix"
        font_size: root.width/10
        pos_hint: {"center_x": .5, "center_y": .7}
        color: 0, 0, 0, 1
        opacity: 0


<WelcomeScreen>
    canvas:
        Color:
            rgba: 189/255, 1, 206/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: min(root.width/15, root.height/15)
        Label:
            id: welcome_text
            opacity: 0
            text: "Welcome to Carbonomix!"
            font_size: max(min(root.width/15, root.height/15), 20)
            size_hint: 1, .1
            text_size: self.width, None
            halign: "center"
            valign: "middle"

        Label:
            id: please_answer_text
            opacity: 0
            text: "Please answer the following questions to get started."
            font_size: max(min(root.width/25, root.height/25), 15)
            pos_hint: {"center_x": .5, "center_y": 1}
            size_hint: 1, .1
            text_size: root.width * .95, None
            halign: "center"
            valign: "middle"

        MDCarousel:
            id: questions
            opacity: 0
            direction: "right"
            anim_move_duration: .2
            anim_cancel_duration: .2
            ignore_perpendicular_swipes: True

            on_touch_down:
                if self.opacity != 1: self.opacity = 1

            QuestionLayout:
                id: electric_bill
                question: "What is your monthly electric bill?" 

            QuestionLayout:
                id: gas_bill
                question: "What is your monthly gas bill?"

            QuestionLayout:
                id: oil_bill
                question: "What is your monthly oil bill?"

            QuestionLayout:
                id: mileage
                question: "What is your total yearly mileage?"
                is_dollar_value: False

            QuestionLayout:
                id: flights_below_4
                question: "How many flights have you taken in the past year that were 4 hours or LESS?"
                is_dollar_value: False
                
            QuestionLayout:
                id: flights_over_4
                question: "How many flights have you taken in the past year that were 4 hours or MORE?"
                is_dollar_value: False
                
            QuestionLayout:
                id: recycle_newspaper
                text_input: False
                question: "Do you recycle newspapers?"
                MDCheckbox:
                    group: 'newspaper'
                    size_hint: None, None
                    size: dp(40), dp(40)
                    pos_hint: {'center_x': .4, 'center_y': .5}
                MDCheckbox:
                    group: 'newspaper'
                    size_hint: None, None
                    size: dp(40), dp(40)
                    pos_hint: {'center_x': .6, 'center_y': .5}
                Label: 
                    id: checkbox_label
                    text: "Yes"
                    pos_hint: {'center_x': .4, 'center_y': .55}
                Label: 
                    id: checkbox_label
                    text: "No"
                    pos_hint: {'center_x': .6, 'center_y': .55}

            QuestionLayout:
                id: recycle_aluminum_tin
                text_input: False
                is_final: True
                question: "Do you recycle aluminum and tin?"
                MDCheckbox:
                    group: 'aluminum_tin'
                    size_hint: None, None
                    size: dp(40), dp(40)
                    pos_hint: {'center_x': .4, 'center_y': .5}
                MDCheckbox:
                    group: 'aluminum_tin'
                    size_hint: None, None
                    size: dp(40), dp(40)
                    pos_hint: {'center_x': .6, 'center_y': .5}
                Label: 
                    id: checkbox_label
                    text: "Yes"
                    pos_hint: {'center_x': .4, 'center_y': .55}
                Label: 
                    id: checkbox_label
                    text: "No"
                    pos_hint: {'center_x': .6, 'center_y': .55}


<QuestionLayout>
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.x + self.width * .05 / 2, self.y
            size: self.width * .95, self.height
            radius: [12]
    Label:
        id: question
        text: root.question
        font_size: max(min(root.width/20, root.height/20), 17)
        text_size: self.width * .8, None
        pos_hint: {"center_x": .5, "center_y": .8}
        halign: "center"
        valign: "middle"

    MDTextField:
        opacity: 1 if root.text_input else 0
        multiline: False
        input_filter: 'float'
        pos_hint: {"center_x": .5, "center_y": .5}
        size_hint_x: 0.6
        required: True
        line_color_normal: 108/255, 168/255, 124/255, 1
        hint_text: "$" if root.is_dollar_value else "#"

    Button:
        text: "Previous"
        size_hint: .3, .07
        pos_hint: {"center_x": .3, "top": .135}
        background_color: 108/255, 168/255, 124/255, 1
        background_normal: ""
        on_release:
            root.parent.parent.load_previous()
    Button:
        text: "Next" if not root.is_final else "Finish"
        size_hint: .3, .07
        pos_hint: {"center_x": .7, "top": .135}
        background_color: (108/255, 168/255, 124/255, 1) if not root.is_final else (66/255, 135/255, 245/255, 1)
        background_normal: ""
        on_release:
            root.parent.parent.load_next()
            if root.is_final: root.parent.parent.parent.parent.submit()


<MenuHeader>
    orientation: "vertical"
    adaptive_size: True
    padding: "4dp"

    MDBoxLayout:
        spacing: "12dp"
        adaptive_size: True

        MDIconButton:
            icon: "gesture-tap-button"
            pos_hint: {"center_y": .5}

        MDLabel:
            text: "Actions"
            adaptive_size: True
            pos_hint: {"center_y": .5}


# Icons: https://materialdesignicons.com/

<MainScreen>
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Carbonomix"
            md_bg_color: 108/255, 168/255, 124/255, 1
            right_action_items: [["menu", lambda x: app.open_menu(x)]]

        MDBottomNavigation:
            id: tabs
            #color stuff 
            panel_color: 201/255, 240/255, 212/255, 1
            text_color_active: 24/255, 110/255, 37/255, 1
            font_style: "" # Add font

            MDBottomNavigationItem:
                name: 'home'
                text: "Carbon"
                icon: 'earth'

                Label: 
                    text: "Programs"
                    pos_hint: {'left': 0.15, 'center_y':.3 }

                MDCarousel:
                    id: programs
                    size_hint: 0.85, 0.95
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    opacity: 1
                    direction: 'right'

                    CarbonCarousel:
                        program_number: 1
                    CarbonCarousel: 
                        program_number: 2
                    CarbonCarousel:
                        program_number: 3

            MDBottomNavigationItem:
                name: 'edit'
                text: "Your Info"
                icon: 'cellphone-information'
                on_tab_release:
                    root.current_tab = 'edit'
                    root.update_values()

                ScrollView: 
                    do_scroll_x: False
                    do_scroll_y: True
                    FloatLayout:
                        size_hint_y: 1.2
                        MDIconButton:
                            icon: 'help-circle'
                            pos_hint: {'center_x': 0.06, 'center_y': 0.95}
                            on_press:
                                root.info_popup_open()

                        MDCard:
                            Image:
                                source: "images/Your Carbon Footprint.png"
                                pos_hint: {'center_x': 0.08, 'center_y': .91}

                        MDLabel:
                            id: footprint_label
                            halign: "center"
                            font_size: "12sp"
                            pos_hint: {'center_x': 0.5, 'center_y': 0.89}

                        MDList:
                            id: info_list
                            EditListItem:
                            EditListItem:
                            EditListItem:
                            EditListItem:
                            EditListItem:
                            EditListItem:
                            EditListItem:
                            EditListItem:

            MDBottomNavigationItem:
                name: 'statistics'
                text: "Statistics"
                text: "Statistics"
                icon: 'chart-bar-stacked'
                on_tab_release:
                    root.current_tab = 'statistics'
                    root.display_values()

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True

                    GridLayout:
                        id: statistics
                        cols: 1
                        padding: "20dp"
                        spacing: "30dp"
                        size_hint_y: None

                        MDBoxLayout:
                            id: change_constraint
                            orientation: "horizontal"
                            size_hint_y: None
                            height: "30dp"

                            MDLabel:
                                text: "Show: "
                                font_size: "17sp"
                                halign: "right"

                            MDDropDownItem:
                                id: constraint
                                font_size: "17sp"
                                text: "Past Year"
                                on_release: root.display_menu.open()

                            MDLabel:

            MDBottomNavigationItem:
                name: 'data-table'
                text: "Data"
                icon: 'table-large'
                on_tab_release:
                    root.current_tab = 'data-table'
                    root.display_data_table()

                FloatLayout:
                    id: data_table

                    MDLabel:
                        id: error_text
                        text: "   "
                        font_size: "15sp"
                        theme_text_color: "Error"
                        pos_hint: {'center_y': 0.13}

                    BoxLayout:
                        pos_hint: {'center_x': 0.5, 'bottom': 0}
                        orientation: "horizontal"
                        padding: "15dp"
                        spacing: "20dp"
                        size_hint: 1, 0.15

                        TableButton:
                            text: "Add"
                            md_bg_color: 51/255, 1, 109/255, 1
                        TableButton:
                            text: "Edit"
                            md_bg_color: 51/255, 126/255, 1, 1
                        TableButton:
                            text: "Delete"
                            md_bg_color: 1, 51/255, 51/255, 1


<TableButton>
    size_hint_y: 0.8
    font_size: "17sp"
    on_release: root.parent.parent.parent.parent.parent.parent.parent.data_table_button_pressed(self.text)


<CarbonCarousel>
    MDCard:
        id: carousel_card
        background: ("images/Environmental Philanthropy.png", "images/Destination Clean Drip.png", "images/Redefine Recycling.png")[root.program_number - 1]
        radius: [10]
        FloatLayout:
            MDLabel:
                id: card_label
                #text: ("Environmental Philanthropy", "Destination Clean Drip", "Redefine Recycling")[root.program_number - 1]
                halign: "center"
            MDFloatingActionButton:
                #TODO: Coloring of buttons (Afshaal)
                icon: "arrow-left"
                pos_hint: {'center_x': 0.1, 'center_y': 0.4}
                on_release: 
                    root.parent.parent.load_previous()
            MDFloatingActionButton:
                #TODO: Coloring of buttons (Afshaal)
                icon: "arrow-right"
                pos_hint: {'center_x': 0.9, 'center_y': 0.4}
                on_release: 
                    root.parent.parent.load_next() 
                    print(root.parent)
            MDFillRoundFlatButton:
                text: "View"
                text_color: 0, 0, 0, 1
                md_bg_color: 1, 150/255,79/255, 1
                pos_hint: {'center_x': 0.5, 'center_y': 0.06}
                size: self.size
                on_release: root.open_p1(root.program_number)


<GraphItem>
    orientation: "vertical"
    size_hint_y: None
    height: Window.size[1] / 1.5
    TwoLineIconListItem:
        text: str(root.category)
        secondary_text: str(abs(root.increase)) + "% " + ("increase" if root.increase >= 0 else "decrease") + " from last entry."
        IconLeftWidget:
            icon: "arrow-up-bold-circle-outline" if root.increase > 0 else "arrow-down-bold-circle-outline" if root.increase < 0 else "minus-circle-outline"
            theme_text_color: "Custom"
            text_color: (1, 0, 0, 1) if root.increase > 0 else (0, 1, 0, 1) if root.increase < 0 else (0.5, 0.5, 0.5, 1)


<FootprintPopup>
    auto_dismiss: False
    size_hint: 0.9, 0.9
    halign: "center"
    title: "Your Carbon Footprint:"
    title_align: "center"
    title_size: 30
    separator_height: 3
    separator_color: 0, 0, 0, 1
    title_color: 0, 0, 0, 1
    background: ""

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        MDLabel: 
            text: root.display_footprint() + " lbs CO2 per year."
            font_size: 40
            halign: "center"
            text_color_active: 5, 5, 5, 5
        MDRaisedButton:
            text: "Go to Home Screen"
            font_size: 24
            md_bg_color: 1, 150/255,79/255, 1
            size_hint: 1, 0.5
            pos_hint: {'center_x': 0.5}
            on_release: 
                app.root.current = "main"
                root.dismiss()

<CategoryPopup>
    size_hint: 0.75, 0.31
    halign: "center"
    title: "Choose Category"
    title_align: "center"
    title_size: 20
    title_color: 1, 1, 1, 1
    background_normal: ""
    background_color: 189/255, 1, 206/255, 1

    FloatLayout:
        MDDropDownItem:
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 0.7
                RoundedRectangle:
                    pos: self.pos
                    size: self.size
                    radius: [2]
            id: category_dropdown
            font_size: "19sp"
            color: 1, 1, 1, 1
            pos_hint: {"center_x": 0.5, "center_y": 0.7}
            on_release:
                root.category_menu.open()

        MDLabel:
            id: label
            pos_hint: {"center_x": 0.04, "center_y": 0.7}

        MDRaisedButton:
            id: continue_button
            text: "Continue"
            font_size: 24
            md_bg_color: 113/255, 201/255, 135/255, 1
            size_hint: 0.8, 0.35
            pos_hint: {"center_x": 0.5, "center_y": 0.25}


<EditPopup>
    size_hint: 0.75, 0.31
    halign: "center"
    title_align: "center"
    title_size: 20
    title_color: 1, 1, 1, 1
    background_normal: ""
    background_color: 189/255, 1, 206/255, 1

    FloatLayout:
        MDTextField:
            id: new_value
            color_mode: "custom"
            current_hint_text_color: 1, 1, 1, 1
            multiline: False
            input_filter: 'float'
            size_hint_x: 0.9
            pos_hint: {"center_x": 0.5}
            required: True
            line_color_normal: 108/255, 168/255, 124/255, 1
            hint_text: "$"
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            
        MDRaisedButton:
            id: update_button
            text: "Update"
            font_size: 24
            md_bg_color: 113/255, 201/255, 135/255, 1
            size_hint: 0.8, 0.35
            pos_hint: {"center_x": 0.5, "center_y": 0.25}

<EditPopupCheckbox>
    size_hint: 0.75, 0.32
    halign: "center"
    title_align: "center"
    title_size: 20
    title_color: 1, 1, 1, 1
    background_color: 189/255, 1, 206/255, 1
    FloatLayout:
        MDCheckbox:
            id: edit_yes
            group: 'yn_edit'
            color: 1, 1, 1, 1
            size_hint: None, None
            size: dp(40), dp(40)
            pos_hint: {'center_x': .4, 'center_y': .62}
        MDCheckbox:
            id: edit_no
            group: 'yn_edit'
            color: 1, 1, 1, 1
            size_hint: None, None
            size: dp(40), dp(40)
            pos_hint: {'center_x': .6, 'center_y': .62}
        Label:
            text: "Yes"
            color: 1, 1, 1, 1
            pos_hint: {'center_x': .4, 'center_y': .82}
        Label:
            text: "No"
            color: 1, 1, 1, 1
            pos_hint: {'center_x': .6, 'center_y': .82}

        MDRaisedButton:
            id: update_button
            text: "Update"
            font_size: 24
            md_bg_color: 113/255, 201/255, 135/255, 1
            size_hint: None, None
            size: 250, 120
            pos_hint: {'center_x': .5}
            size_hint: 0.8, 0.35
            pos_hint: {"center_x": 0.5, "center_y": 0.25}


<EditListItem>
    IconRightWidget:  
        icon: "pencil"
        on_release: 
            root.parent.parent.parent.parent.parent.parent.parent.parent.edit_title(root.text.split(":")[0])


<ExitScreen>
    canvas:
        Color:
            rgba: 189/255, 1, 206/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: ending_text
        text: "Thank you for using\nCarbonomix!"
        font_size: root.width/10
        halign: "center"
        pos_hint: {"center_x": .5, "center_y": .5}
        color: 0, 0, 0, 1
        opacity: 0


<CustomSnackbar>
    MDIconButton:
        theme_text_color: "Custom"
        text_color: 1, 1, 1, 1
        pos_hint: {'center_y': .5}
        icon: root.icon

    MDLabel:
        id: text_bar
        size_hint_y: None
        height: self.texture_size[1]
        text: root.text
        font_size: root.font_size
        theme_text_color: 'Custom'
        text_color: 1, 1, 1, 1
        shorten: True
        shorten_from: 'right'
        pos_hint: {'center_y': .5}


<ProgramOneScreen>
    canvas:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            pos: self.pos
            size: self.size
    MDLabel:
        id: program_screen_title
        font_size: 22
        pos_hint: {'center_y': 0.92}
        halign: "center"
    MDList:
        id: p1_list
        size_hint: 1, 1
    MDIconButton:
        icon: "arrow-left-circle"
        on_release: root.to_main()
        pos_hint: {'center_x': 0.075, 'center_y': 0.95}


<P1ListItem>
    size_hint: 1, 0.25
    text_size: self.width, None
    IconRightWidget:
        icon: "card-text"
        on_release: root.screen_select()


<TaskScreen>
    MDList:
        size_hint: 1, 1
        id: screen_of_tasks
    MDIconButton:
        icon: "arrow-left-circle"
        on_release: root.to_p1()
        pos_hint: {'center_x': 0.075, 'center_y': 0.95}


<TaskListItem>
    size_hint: 1, 0.2
    text_size: self.width, None
    secondary_text: " "
    tertiary_text: " "
    RightCheckbox:
        id: task_checkbox
        on_active:
            root.if_active(self.active)
        active: root.is_checked


<WeekCompletePopup>
    size_hint: 0.7, 0.4
    halign: "center"
    valign: "center"
    title: "Congrats!"
    title_align: "center"
    title_size: 30
    separator_height: 3
    separator_color: 0, 0, 0, 1
    title_color: 0, 0, 0, 1
    background: ""

    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        MDLabel:
            text: "You have completed this week!"
            font_size: 26
            halign: "center"
            text_color_active: 5, 5, 5, 5
        MDFillRoundFlatButton:
            text: "Back to Program!"
            font_size: 14
            md_bg_color: 1, 150/255,79/255, 1
            size_hint: .825, .275
            pos_hint: {'center_x': 0.5}
            on_release:
                root.dismiss()


<InfoPopup>
    size_hint: 0.6, 0.4
    halign: "center"
    valign: "center"
    title: "Info"
    title_align: "center"
    title_size: 30
    separator_height: 3
    separator_color: 0, 0, 0, 1
    title_color: 0, 0, 0, 1
    background: ""

    RelativeLayout:
        orientation: "vertical"
        size: root.width, root.height
        MDLabel:
            text: "add reccomended and average"
            font_size: 20
            halign: "center"
            pos_hint: {'center_y': 0.65}
            text_color_active: 5, 5, 5, 5
        MDFillRoundFlatButton:
            text: "Exit"
            text_color: 0, 0, 0, 1
            md_bg_color: 1, 150/255,79/255, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.06}
            size_hint: 0.2, 0.1
            on_release: root.dismiss()

<ProgramCompletePopup>
    size_hint: 0.7, 0.4
    halign: "center"
    valign: "center"
    title: "Congrats!"
    title_align: "center"
    title_size: 30
    separator_height: 3
    separator_color: 0, 0, 0, 1
    title_color: 0, 0, 0, 1
    background: ""

    RelativeLayout:
        orientation: "vertical"
        size: root.width, root.height
        MDLabel:
            text: "You have completed this program!"
            font_size: 20
            halign: "center"
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            text_color: 1, 1, 1, 1
        MDRaisedButton:
            text: "Back to Main"
            font_size: 14
            md_bg_color: 1, 150/255,79/255, 1
            pos_hint: {'center_x': 0.25, 'center_y': 0.2}
            on_release:
                root.to_main()
                root.dismiss()
        MDRaisedButton:
            text: "View Program"
            font_size: 14
            md_bg_color: 1, 150/255,79/255, 1
            pos_hint: {'center_x': 0.75, 'center_y': 0.2}
            on_release:
                root.dismiss()

