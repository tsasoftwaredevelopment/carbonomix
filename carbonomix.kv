#:import SlideTransition kivy.uix.screenmanager.SlideTransition
#:import images_path kivymd.images_path

<Label>
    color: 0, 0, 0, 1

<StartingScreen>
    canvas:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        id: title
        text: "Carbonomix"
        font_size: root.width/10
        pos_hint: {"center_x": .5, "center_y": .7}
        color: 1, 1, 1, 1
        opacity: 0

<WelcomeScreen>
    canvas:
        Color:
            rgba: 189/255, 1, 206/255, 1
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: min(root.width/15, root.height/15)
        Label:
            id: welcome_text
            opacity: 0
            text: "Welcome to Carbonomix!"
            font_size: max(min(root.width/15, root.height/15), 20)
            size_hint: 1, .1
            text_size: self.width, None
            halign: "center"
            valign: "middle"

        Label:
            id: please_answer_text
            opacity: 0
            text: "Please answer the following questions to get started."
            font_size: max(min(root.width/25, root.height/25), 15)
            pos_hint: {"center_x": .5, "center_y": 1}
            size_hint: 1, .1
            text_size: root.width * .95, None
            halign: "center"
            valign: "middle"
        Carousel:
            id: questions
            opacity: 0
            direction: "right"
            anim_move_duration: .2
            anim_cancel_duration: .2
            ignore_perpendicular_swipes: True

            on_touch_down:
                if self.opacity != 1: self.opacity = 1

            QuestionLayout:
                id: electric_bill
                question: "What is your monthly electric bill?"

            QuestionLayout:
                id: gas_bill
                question: "What is your monthly gas bill?"

            QuestionLayout:
                id: oil_bill
                question: "What is your monthly oil bill?"

            QuestionLayout:
                id: mileage
                question: "What is your total yearly mileage?"

            QuestionLayout:
                id: flights_below_4
                question: "How many flights have you taken in the past year that were 4 hours or LESS?"

            QuestionLayout:
                id: flights_over_4
                question: "How many flights have you taken in the past year that were 4 hours or MORE?"

            QuestionLayout:
                id: recycle_newspaper
                question: "Do you recycle newspapers?"

            QuestionLayout:
                id: recycle_aluminum_tin
                is_final: True
                question: "Do you recycle aluminum and tin?"


<QuestionLayout>
    orientation: "vertical"
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        RoundedRectangle:
            pos: self.x + self.width * .05 / 2, self.y
            size: self.width * .95, self.height
            radius: [12]
    Label:
        id: question
        text: root.question
        font_size: max(min(root.width/20, root.height/20), 17)
        text_size: self.width * .8, None
        pos_hint: {"center_x": .5, "center_y": .8}
        halign: "center"
        valign: "middle"

    Button:
        text: "Previous"
        size_hint: .3, .07
        pos_hint: {"center_x": .3, "top": .135}
        background_color: 108/255, 168/255, 124/255, 1
        background_normal: ""
        on_release:
            root.parent.parent.load_previous()
    Button:
        text: "Next" if not root.is_final else "Finish"
        size_hint: .3, .07
        pos_hint: {"center_x": .7, "top": .135}
        background_color: (108/255, 168/255, 124/255, 1) if not root.is_final else (66/255, 135/255, 245/255, 1)
        background_normal: ""
        on_release:
            root.parent.parent.load_next()
            #if root.is_final: root.parent.parent.parent.parent.manager.transition.direction = 'right'
            if root.is_final: app.root.transition = SlideTransition(direction='left')
            if root.is_final: app.root.current = "main"
            # root.parent.parent.parent.parent.submit()

# Icons: https://materialdesignicons.com/

<MainScreen>
    BoxLayout:
        orientation: 'vertical'

        MDToolbar:
            title: "Carbonomix"
            md_bg_color: 108/255, 168/255, 124/255, 1
            right_action_items: [["dots-vertical", lambda x: app.callback_1()], ["email", lambda x: app.callback_2()]]

        MDBottomNavigation:
            #color stuff 238/255, 234/255, 234/255, 1 , 108/255, 168/255, 124/255 , 1, 151/255, 236/255, 248/255, 1
            panel_color: 201/255, 240/255, 212/255, 1
            #selected_color_background: 213/255, 242/255, 220/255, 1
            text_color_active: 24/255, 110/255, 37/255, 1 # FIX COLORS, ADD FONT, FIX ICONS,
            font_style: ""

            MDBottomNavigationItem:
                name: 'screen 1'
                text: "Carbon"
                icon: 'earth' 

                MDLabel:
                    text: "Tab to see current carbon footprint. Maybe also display the most recent inputted values here. This will probably be the main tab that the app opens up on."
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen 2'
                text: "Your Info"
                icon: 'cellphone-information'

                MDLabel:
                    text: "Tab to enter new values for the questions that were on the welcome screen (used for carbon footprint calculation). Maybe make it look like a form (like those that you scroll down to the next question and submit at the very bottom). Probably direct user to percent change tab after inputting values."
                    halign: 'center'

            MDBottomNavigationItem:
                name: 'screen 3'
                text: "Statistics"
                icon: 'chart-bar-stacked'

                MDLabel:
                    text: 'Tab to see percent change since last input of values (could also add statistics like average electric bill over the past year or percent change since last year). '
                    halign: 'center'